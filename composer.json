{
    "name": "formation/boutique-php",
    "description": "Starter pour formation PHP 14 jours",
    "type": "project",
    "require": {
        "php": ">=8.2"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.12",
        "laravel/pint": "^1.27",
        "rector/rector": "^1.2"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        },
        "files": [
            "app/helpers.php"
        ]
    },
    "scripts": {
        "lint": "pint --test",
        "fix": "pint",
        "analyse": "phpstan analyse --level=5",
        "quality": [
            "@lint",
            "@analyse"
        ]
    }
}
