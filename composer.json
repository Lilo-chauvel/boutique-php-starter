{
    "name": "formation/boutique-php",
    "description": "Starter pour formation PHP 14 jours",
    "type": "project",
    "require": {
        "php": ">=8.2"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.10",
        "laravel/pint": "^1.13",
        "rector/rector": "^0.18"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "scripts": {
        "lint": "pint --test",
        "fix": "pint",
        "analyse": "phpstan analyse --level=5",
        "quality": ["@lint", "@analyse"]
    }
}
